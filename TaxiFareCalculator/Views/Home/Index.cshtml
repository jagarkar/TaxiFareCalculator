@{
    ViewBag.Title = "Home Page";
}
<project-Title></project-Title><br /><br />
<div class="row" ng-controller="taxiFareController">
    <div class="col-sm-6">
        <div class="tab-content">
            <form name="taxiFareForm" novalidate class="app-form" ng-submit="CalculateFare()">
                <div id="frmView" class="tab-pane fade in active">
                    <div class='form-row'>
                        <div class='form-group'>
                            <label class='control-label'>Ride Start Date and Time <span style="color: red;">*</span></label>
                            <input autocomplete='off' ng-model="rideStartDateTime" name="rideStartDateTime" class='form-control' size='20' type='datetime-local' required>
                        </div>
                        <div class='form-group'>
                            <label class='control-label'>Number of miles driven below 6mph <span style="color: red;">*</span></label>
                            <input class='form-control' ng-model="numberOfMilesDrivenBelow6mph" type='text' required numbers-only>
                        </div>
                        <div class='form-group'>
                            <label class='control-label'>Number of minutes driven at 6pmh and above <span style="color: red;">*</span></label>
                            <input class='form-control' ng-model="numberOfMinutesDrivenAbove6mph" type='text' required numbers-only>
                        </div>
                        <div class='form-group'>
                            <label class='control-label'>Start Location <span style="color: red;">*</span></label>
                            <input class='form-control' ng-model="rideStartLocation" type='text' required>
                        </div>
                        <div class='form-group'>
                            <label class='control-label'>End Location <span style="color: red;">*</span></label>
                            <input class='form-control' ng-model="rideEndLocation" type='text' required>
                        </div>
                    </div>
                    <div class='form-row'>
                        <div class='form-group'>
                            <label class='control-label'></label>
                            <button class='form-control btn btn-primary' type="submit" ng-disabled="taxiFareForm.$invalid"> Calculate Fare →</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-sm-6">

        <div class="jumbotron jumbotron-flat">
            <div class="center"><h2><i>TOTAL TAXI FARE:</i></h2></div>
            <div class="paymentAmt">{{totalFare | currency}}</div>
        </div>
        <br><br><br>
    </div>
</div>